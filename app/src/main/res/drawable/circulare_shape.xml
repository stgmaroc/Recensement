<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="oval">
            <item android:drawable="@drawable/ic_person_black_24dp"/>
            <solid android:color="#ffffff"/>
            <stroke android:color="#00000000" android:width="5dp"/>

            <!-- Set the same value for both width and height to get a circular shape -->
            <size android:width="250dp" android:height="250dp"/>

        </shape>
    </item>
    <item android:drawable="@drawable/ic_person_black_24dp" android:gravity="center" android:width="180dp" android:height="180dp" />

</layer-list>